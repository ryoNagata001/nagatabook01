<% if @note.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
	<h2><%=@note.errors.count %>件のエラーがあります</h2>
<ul>
<% @note.errors.full_messages.each do |message| %>
	<li><%= message %></li>
<% end %>
</ul>
<% end %>
	</div>
<%= form_for(@note) do |f|%>
	<p>ユーザ</p>
	<%= f.collection_select :user_id, User.all, :id, :name ,{prompt: true},{class: "form-control user-id-field"}%>
	<p>タイトル</p>
	<%= f.text_field :title, class:"form-control title-field" %>
	<p>内容</p>
	<%= f.text_area :content, class: "form-control content-field"%>
	<%= f.submit '保存', class: "btn primary-btn" %>
<% end %>
